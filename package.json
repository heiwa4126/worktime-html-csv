{
	"name": "@heiwa4126/worktime-html-csv",
	"version": "0.1.2-rc.0",
	"description": "Parse worktime HTML tables and convert them to pivot-style CSV. Dual ESM/CJS output, TypeScript types, and CLI tool. Supports Node.js (linkedom) and browser (native DOM).",
	"type": "module",
	"main": "./dist/parse.cjs",
	"module": "./dist/parse.js",
	"types": "./dist/parse.d.ts",
	"browser": "./dist/parse.browser.global.js",
	"bin": {
		"worktime-html-csv": "dist/cli.js",
		"off-the-books": "dist/cli.js"
	},
	"exports": {
		".": {
			"types": "./dist/parse.d.ts",
			"import": "./dist/parse.js",
			"require": "./dist/parse.cjs"
		},
		"./browser": {
			"types": "./dist/parse.browser.d.ts",
			"import": "./dist/parse.browser.js",
			"require": "./dist/parse.browser.cjs"
		}
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.cjs",
		"dist/**/*.d.ts",
		"dist/**/*.d.cts",
		"dist/**/*.map"
	],
	"scripts": {
		"cli": "tsx ./src/cli.ts",
		"cli1": "tsx ./src/cli.ts test_data/test1.html",
		"build": "tsdown",
		"test": "vitest run",
		"test:run": "vitest run",
		"test:watch": "vitest",
		"test:browser": "vitest run --config vite.config.browser.ts",
		"clean": "rm -rf dist",
		"prepublishOnly": "run-s lint test test:browser clean build smoke-test",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"format:all": "pnpm pkg fix && biome format --write . && dprint fmt && textlint --fix \"**/*.md\"",
		"smoke-test:node": "node examples/ex1.mjs && node examples/ex1.cjs && tsx examples/ex1.ts",
		"smoke-test:cli": "node dist/cli.js --version",
		"smoke-test:dom": "node examples/ex8-dom.mjs && node examples/ex8-dom.cjs",
		"smoke-test": "run-p smoke-test:*",
		"prepack": "clean-publish-scripts -c",
		"postpack": "clean-publish-scripts -r",
		"version:prepatch": "npm version prepatch --preid=rc",
		"version:patch": "npm version patch",
		"start": "serve .",
		"trivy": "trivy config . && trivy fs --exit-code 1 --severity HIGH,CRITICAL .",
		"sbom": "trivy fs --scanners vuln --format spdx-json --output sbom.spdx.json .",
		"osv-scan": "osv-scanner -r ."
	},
	"keywords": [
		"worktime",
		"html parser",
		"csv",
		"pivot table",
		"typescript",
		"esm",
		"commonjs",
		"cli",
		"tsdown",
		"papaparse",
		"trusted publishing",
		"browser",
		"DOMParser"
	],
	"author": "heiwa4126 <heiwa4126@gmail.com>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/heiwa4126/worktime-html-csv.git"
	},
	"bugs": {
		"url": "https://github.com/heiwa4126/worktime-html-csv/issues"
	},
	"homepage": "https://github.com/heiwa4126/worktime-html-csv#readme",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@heiwa4126/clean-publish-scripts": "^0.0.3",
		"@types/node": "^25.0.3",
		"@types/papaparse": "^5.5.2",
		"happy-dom": "^20.0.11",
		"npm-run-all": "^4.1.5",
		"serve": "^14.2.5",
		"tsdown": "^0.18.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"linkedom": "^0.18.12",
		"papaparse": "^5.5.3"
	}
}
